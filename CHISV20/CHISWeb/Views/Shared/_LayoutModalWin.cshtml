    @RenderSection("scripts", required: false)
 <script>
     $(function () {



         //  @*=============================切换停用日期==================================*@
         $('input[ah-targ="ahchk-switch"]').each(function (index, item) {
             var ischecked = $(item).is(":checked");
             var ic = $(item).parent().find('[ah-targ="ahchk-switchshow"] i');
             if (ischecked) ic.removeClass("fa-toggle-off").addClass("fa-toggle-on");
             else ic.removeClass("fa-toggle-on").addClass("fa-toggle-off");
         });
         $('[ah-targ="ahchk-switchshow"]').on("click", function () {
             var ic = $(this).find("i");
             var ison = $(this).find("i").hasClass("fa-toggle-on");
             if (ison) {
                 ic.removeClass("fa-toggle-on").addClass("fa-toggle-off");//close
                 $(this).parent().find('input[ah-targ="ahchk-switch"]').prop("checked", false);
             } else {
                 ic.removeClass("fa-toggle-off").addClass("fa-toggle-on");//open
                 $(this).parent().find('input[ah-targ="ahchk-switch"]').prop("checked", true);
             }
         })
     });
    </script>

}

