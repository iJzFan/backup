    <h1>栅格+输入框</h1>
    <div class="ah-flex-layout">
        <div class="ah-col-md1 ah-flex-data">
            <div class="ah-data-label">标题</div>
            <input class="ah-data-input" type="text"/>
        </div>
    </div>
    <div class="ah-flex-layout">
        <div class="ah-col-md2 ah-flex-data">
            <div class="ah-data-label ah-flex ah-space-between">
                <span>带checkbox的标题</span>
                <input name="like11" lay-skin="primary" title="选项" type="checkbox">
            </div>
            <input class="ah-data-input" type="text" />
        </div>
        <div class="ah-col-md2 ah-flex-data">
            <div class="ah-data-label">标题</div>
            <input class="ah-data-input" type="text" />
        </div>
    </div>
    <div class="ah-flex-layout">
        <div class="ah-col-md3 ah-flex-data">
            <div class="ah-data-label">时间范围</div>
            <input class="ah-data-input ah-date-range" type="text" />
        </div>
        <div class="ah-col-md3 ah-flex-data">
            <div class="ah-data-label">年月日</div>
