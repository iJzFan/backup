@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@section links{
    <style>
        .tab-content {
            padding: 20px 10px;
            border: 1px solid #ddd;
            border-top: none;
        }
        xmp {
            overflow: hidden;
            background: #f0ece6;
            border-radius: 4px;
            border: 1px solid #ccc;
            margin: 0;
        }
        .margin-b {
            margin-bottom: 10px
        }
        .test-div {
            width: 100%;
            height: 300px;
            border: 1px solid #ddd;
            position: relative;
        }
        .test-bj-color1{
            background:#2bccaf;
        }
        .test-bj-color2 {
            background: #ff6a00;
        }
    </style>
}
<div class="ah-main-text">

    <h1>页面布局(上下)</h1>
    <span>test-div为模拟屏幕宽高 , test-bj-color* 为显示效果添加的背景颜色</span>
    <div class="test-div ah-flex-column">
        <div style="height:30px" class="test-bj-color1">
            固定高度30px
        </div>
        <div class="ah-flex-auto test-bj-color2">
            .ah-flex-auto{
            flex:1
            }
        </div>
    </div>

    <h1>页面布局(左右)</h1>
    <span>test-div为模拟屏幕宽高 , test-bj-color* 为显示效果添加的背景颜色</span>
    <div class="test-div ah-flex">
        <div style="width:100px" class="test-bj-color1">
            固定宽度100px
        </div>
        <div class="ah-flex-auto test-bj-color2">
            .ah-flex-auto{
            flex:1
            }
        </div>
    </div>


    <h1>页面布局(工具栏)</h1>
    <span>test-div为模拟屏幕宽高 , test-bj-color* 为显示效果添加的背景颜色</span>
    <div class="test-div ah-flex-column" ah-tools="wrap">
        <div class="test-bj-color1 ah-tools">
            <div class="ah-tool-wrap">工具1</div>
            <div class="ah-tool-wrap">工具2</div>
            <div class="ah-tool-wrap">工具3</div>
            <a class="ah-tool-more-btn" onclick="ahTools(this)">更多</a>
        </div>
        <div class="ah-tool-more" style="top:50px;background:#ccc;">
            更多条件
        </div>
        <div class="ah-flex-auto test-bj-color2">
            显示更多条件 外层需要ah-tools="wrap"
        </div>
    </div>

    <h1>表格+分页</h1>
    <span>test-div为模拟屏幕宽高 , test-bj-color* 为显示效果添加的背景颜色</span>
    <div>
        <div class="ah-main-absolute ah-flex-column" ah-tools="wrap">
            <div class="test-bj-color1 ah-tools">
                <div class="ah-tool-wrap">工具1</div>
                <div class="ah-tool-wrap">工具2</div>
                <div class="ah-tool-wrap">工具3</div>
                <a class="ah-tool-more-btn" onclick="ahTools(this)">更多</a>
            </div>
            <div class="ah-tool-more">
                更多条件
            </div>
            <div class="ah-table-wrap scrollbar-dynamic">
                <table>
                    <thead>
                        <tr>
                            <th>栏目1</th>
                            <th>栏目1</th>
                            <th>栏目1</th>
                            <th>栏目1</th>
                            <th>栏目1</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < 20; i++)
                        {
                            <tr>
                                <td>数据@(i)</td>
                                <td>数据@(i)</td>
                                <td>数据@(i)</td>
                                <td>数据@(i)</td>
                                <td>数据@(i)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="ah-page-wrap" id="pager">
                分页
            </div>
        </div>
    </div>

