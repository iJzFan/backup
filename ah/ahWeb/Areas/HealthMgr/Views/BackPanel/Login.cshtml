@model ah.Models.ViewModel.AHMSLoginAccountViewModel
@{

}
@section links{
    <style>
        html {
            height:100%;
        }
        body {
            height: 100%;
        }
        .validation-summary-errors {
            color: red;
            width: 100%;
            padding: 10px 10px 0 10px;
        }
        .validation-summary-errors li{
            float:left;
            margin-right:10px;
        }
        .login-bj {
            background-image: url('/HealthMgr/img/login_bg.jpg');
            height: 100%;
            background-size: 100% 100%;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-content {
            height: 300px;
            width: 570px;
            position: relative;
        }
        .login-input {
            position: relative;
            background: #d9d9d9;
            min-height: 78px;
            padding: 10px 0;
            border: 1px solid #b3bbbe;
            border-radius: 5px;
            -moz-box-shadow: 0px 3px 3px #5c5b5b;
            box-shadow: 1px 3px 3px #5c5b5b;
            display: flex;
            z-index: 2;
            flex-wrap: wrap;
        }
        .login-input input {
            flex: 1;
            margin: 0 10px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            color: #666;
            min-height: 56px;
        }
        .login-sub {
            position: absolute;
            background: #23a296;
            border: none;
            top: 140px;
            height: 54px;
            width: 56px;
            right: -55px;
            z-index: 1;
            color: #fff;
            border-radius: 3px;
            font-size: 16px;
        }
        .login-logo {
            display: flex;
            align-items: center;
            font-size: 28px;
            color: #fff;
            justify-content: center;
            margin-bottom: 29px;
        }
        .login-logo img {
            width: 100px;
        }
        .login-logo p {
            margin:0;
        }
        .login-logo div {
            border-left: 2px solid #fff;
            height: 84px;
            margin-left: 35px;
            padding-left: 30px;
            text-shadow: 2px 2px 2px #504e4e;
        }
        .return-index {
            position: absolute;
            top: 144px;
            left: -53px;
            color: #fff;
            font-size: 30px;
            transform: rotate(180deg);
            -ms-transform: rotate(180deg);
            -moz-transform: rotate(180deg);
            -webkit-transform: rotate(180deg);
            -o-transform: rotate(180deg);
        }
        .return-index:hover {
            color: #23a296;
        }
    </style>
}
 
<div class="login-bj">
    <form class="login-content" method="post" asp-anti-forgery="true" asp-action="Login">
        <div class="login-logo">
            <img src="~/HealthMgr/img/logo_03.png" />
            <div>
                <p>天使健康</p>
                <p>慢性病管理系统</p>
            </div>
        </div>
        <div class="login-input">
            <input type="text" placeholder="登录手机" asp-for="LoginMobile" />
            <input type="password" placeholder="登录密码" asp-for="LoginPassword" />
            @Html.ValidationSummary()
        </div>
        <button type="submit" class="login-sub">登录</button>
        <a title="返回首页" class="return-index" href="/home/"><i class="glyphicon glyphicon-share-alt"></i></a>
       
       
        
    </form>
</div>



@section scripts{
    <script>
        $(function () {
           
        });      
    </script>
}
