@section scripts{
    <script>
        $(function () {

        });

        function loginCustomer() {
            var dd = {
                cusName: '@(Model.Name)',
                cusMobile: '@(Model.Mobile)',
                cusEmail: '@(Model.Email)',
                callBack:'/Customer/CusProc/QuesProc?qid=@(Model.QAFlowMainId)'
            }
            CustomerLogin(dd);
        }
        function registCustomer() {
            var dd = {
                cusName: '@(Model.Name)',
                cusMobile: '@(Model.Mobile)',
                cusEmail: '@(Model.Email)',
                callBack:'/Customer/CusProc/QuesProc?qid=@(Model.QAFlowMainId)'
            }
            CustomerRegist(dd);
        }

        function CustomerLogin(dd) {
            dd = $.extend({actionType:"customer_login"},dd);
            //配置的用户登录和注册接口数据
            var lk = '@(Global.ConfigSettings.CustomerActionPath)';
            //向新的连接post数据过去
            postPage(lk, dd, false);
        }
        function CustomerRegist(dd) {
            dd = $.extend({ actionType: "customer_regist" }, dd);
             //配置的用户登录和注册接口数据
            var lk = '@(Global.ConfigSettings.CustomerActionPath)';
