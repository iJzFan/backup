@model ah.Models.AHMS_QAFlow_Main
@{
    ViewBag.Title = "乳腺癌调查问卷提交";
}
@section links{
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: "微软雅黑";
            background-color: #fff;
        }

        .content-title {
            color: #FFFFFF;
            width: 80%;
            margin: 20px auto;
            text-align: center;
            position: relative;
            font-size: 24px;
        }

        .content-wrap {
            padding: 20px;
            width: 80%;
            margin: 0 auto;
            background: #fff;
            box-sizing: border-box;
            box-shadow: 0 0 5px #aaaaaa;
            transform: rotate(0deg);
            -webkit-transform: rotate(0deg);
            font-size: 14.0px;
            border-radius: 0px;
            border-width: 1px;
            border-style: solid;
            text-align: center;
            line-height: 20px;
            font-weight: normal;
            font-style: normal;
            z-index: 5;
            opacity: 1;
            pointer-events: auto;
            margin-bottom: 100px;
        }

        .content {
            margin-top: 40px;
            box-sizing: border-box;
            border: 2px solid #e04689;
            padding: 25px 30px 15px;
            width: 100%;
            position: relative;
            text-align: left;
            min-height: 500px;
            background: url(/HealthMgr/img/data_bj.png);
            background-size: 100%;
            background-repeat: no-repeat;
            background-position-y: 100%;
        }

        .text-title {
            background: #fff;
            color: #5677fc;
            font-size: 24.0px;
            font-weight: bold;
            position: absolute;
            top: -22px;
            padding: 10px;
            left: 20px;
        }

        .bowknot-wrap {
            position: absolute;
            top: -22px;
            right: -18px;
            background: #fff;
            width: 58px;
            text-align: center;
        }

            .bowknot-wrap img {
                transform: rotate(331deg);
                -webkit-transform: rotate(331deg);
                width: 24px;
                height: 50px;
            }

        .text-wrap {
            line-height: 24px;
        }

            .text-wrap p {
                margin: 0;
            }

        .keyword {
            font-size: 20px;
            font-weight: bold;
            margin-right: 8px;
        }

        .foot {
            line-height: 55px;
            font-size: 18px;
            text-align: left;
            margin: 30px 0;
        }

            .foot a {
                background: #ff6091;
                color: #fff;
                height: 53px;
                display: block;
                float: right;
                border: 1px solid #d81b60;
                border-radius: 5px;
                padding: 0 22px;
                cursor: pointer;
            }

        .clear {
            clear: both;
        }

        .sub-float {
            position: fixed;
            width: 50px;
            height: 50px;
            background: #ff6091;
            border-radius: 3px;
            right: 0.5%;
            bottom: 30px;
            margin-top: 53px;
            transition: all 1s;
            -moz-transition: all 1s; /* Firefox 4 */
            -webkit-transition: all 1s; /* Safari 和 Chrome */
            -o-transition: all 1s; /* Opera */
            opacity: 1;
            padding: 10px;
            box-sizing: border-box;
            cursor: pointer;
        }

            .sub-float img {
                width: 100%;
                height: 100%;
            }

        @@media screen and (max-width:500px) {
            .sub-float {
                display: none;
            }
            .content-wrap{width:99%;}


        }

        .prohibit {
        }
    </style>
}


